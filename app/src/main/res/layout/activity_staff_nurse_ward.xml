<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    tools:context=".staff.ward.NurseWardActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="병동"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <Spinner
            android:id="@+id/btn_nextday"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:text="다음날"
            android:textSize="16dp"
            android:background="@drawable/spinner_white"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/box_round_lightgray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="1번"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/second_color"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="빈 침대"
                android:textSize="16dp"
                android:textColor="@color/gray"
                android:background="@drawable/box_lightgray"
                android:backgroundTint="@color/white"
                android:gravity="center" />

            <View
                android:background="@color/back_color"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="2번"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/second_color"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="빈 침대"
                android:textSize="16dp"
                android:textColor="@color/gray"
                android:background="@drawable/box_lightgray"
                android:backgroundTint="@color/white"
                android:gravity="center" />

        </LinearLayout>

        <View
            android:background="@color/back_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="3번"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/second_color"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="빈 침대"
                android:textSize="16dp"
                android:textColor="@color/gray"
                android:background="@drawable/box_lightgray"
                android:backgroundTint="@color/white"
                android:gravity="center" />

            <View
                android:background="@color/back_color"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="4번"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/second_color"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="빈 침대"
                android:textSize="16dp"
                android:textColor="@color/gray"
                android:background="@drawable/box_lightgray"
                android:backgroundTint="@color/white"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- 환자정보 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="환자정보"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자세히보기 ▶"
            android:textSize="16dp"
            android:textColor="@color/main_color"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/tv_info"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/box_round_lightgray"
        android:backgroundTint="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingHorizontal="5dp"
            android:layout_marginHorizontal="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="병명"
                android:textSize="16dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingHorizontal="5dp"
            android:layout_marginHorizontal="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입원일자"
                android:textSize="16dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:paddingHorizontal="5dp"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="퇴원(예정)일자"
                android:textSize="16dp"
                android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/et_date"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:drawableEnd="@drawable/icon_calendar_multiselect"
                android:focusable="false"
                android:inputType="date"
                android:paddingStart="5dp"
                android:backgroundTint="@color/gray"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="환자상태기록"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_medical_record"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/box_round_lightgray"
        android:backgroundTint="@color/white"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="15dp"
        android:paddingHorizontal="5dp"
        android:background="@drawable/box_round_lightgray"
        android:backgroundTint="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_content"
            android:hint="내용"
            android:textSize="16dp"
            android:paddingStart="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:backgroundTint="@color/gray"
            android:layout_marginEnd="15dp"/>

        <Button
            android:id="@+id/bt_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="저장"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/second_color"/>
    </LinearLayout>

</LinearLayout>