<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#E7ECF3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reception.appointment.AppointmentActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_customer" />
    <LinearLayout
        android:id="@+id/ll_confirm_date"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_show_date"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="예약현황을 확인하세요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imgv_calendar"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_calendar_multiselect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="@color/white" />
    </LinearLayout>
       <LinearLayout
           android:background="#123"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal">
           <LinearLayout
               android:gravity="center"
               android:layout_gravity="center"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:textColor="@color/white"
                   android:text="예약현황"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:id="@+id/tv_count_all"
                   android:background="@color/white"
                   android:gravity="right"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:textStyle="bold"
                   android:paddingRight="10dp"
                   android:text=""
                   android:layout_width="50dp"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:textColor="@color/white"
                   android:text="명"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
           <LinearLayout
               android:gravity="center"
               android:layout_gravity="center"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:textColor="@color/white"
                   android:text="대기인원"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:id="@+id/tv_count_waiting"
                   android:background="@color/white"
                   android:gravity="right"
                   android:textStyle="bold"
                   android:paddingRight="10dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:text=""
                   android:layout_width="50dp"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:textColor="@color/white"
                   android:text="명"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           </LinearLayout>
       </LinearLayout>
    <TextView
        android:id="@+id/tv_today"
        android:textColor="@color/main_color"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="오늘 예약 현황입니다"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
       android:backgroundTint="@color/second_color"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="순번"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="시간"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="이름"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="진료과목"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="담당의사"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardv_appointment_list"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recv_appointment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>