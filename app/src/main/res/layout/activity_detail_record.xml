<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginBottom="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reception.search.record.detailrecord.DetailRecordActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_reception" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="진료이력조회"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/ll_search_patient"
        android:visibility="gone"
        android:gravity="center"
        android:background="@color/second_color"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:background="@drawable/round_corner"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <EditText
                android:layout_width="260dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/close"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="@color/gray" />
        </RelativeLayout>
            <Button
                android:layout_marginLeft="10dp"
                android:padding="0dp"
                android:text="검색"
                android:backgroundTint="@color/second_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:background="@color/second_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:padding="5dp"
            android:background="@color/white"
            android:id="@+id/term"
            android:paddingLeft="5dp"
            android:textSize="15dp"
            android:text=""
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ll_calender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_calendar_multiselect"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="@color/white" />
            <TextView
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:textSize="15dp"
                android:text="날짜선택"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
  <RadioGroup
      android:id="@+id/radio_group"
      android:background="@color/second_color"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <RadioButton
          android:textColor="@color/white"
          android:id="@+id/radio1"
          android:textSize="15dp"
          android:text="1 개월"
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"/>
      <RadioButton
          android:textColor="@color/white"
          android:id="@+id/radio2"
          android:textSize="15dp"
          android:text="3 개월"
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"/>
    <RadioButton
        android:textColor="@color/white"
        android:id="@+id/radio3"
        android:textSize="15dp"
        android:text="6 개월"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
      <RadioButton
          android:textColor="@color/white"
          android:id="@+id/radio4"
          android:textSize="15dp"
          android:text="1년"
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"/>
      <TextView
          android:id="@+id/select_date"
          android:padding="5dp"
          android:background="@color/main_color"
          android:layout_marginRight="10dp"
          android:textColor="@color/white"
          android:text="날짜선택"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
  </RadioGroup>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_detail_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
    </FrameLayout>
</LinearLayout>