<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginBottom="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reception.search.record.detailrecord.DetailRecordActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_reception" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="진료이력조회"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/ll_search_patient"
        android:gravity="center"
        android:background="@color/second_color"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:background="@drawable/round_corner"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <EditText
                android:gravity="bottom"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                android:id="@+id/edit_name"
                android:layout_width="260dp"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/close"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="@color/gray" />
        </RelativeLayout>
            <Button
                android:id="@+id/btn_click"
                android:layout_marginLeft="10dp"
                android:padding="0dp"
                android:text="검색"
                android:backgroundTint="@color/second_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="환자검색"
            android:textColor="@color/main_color"
            android:textSize="16dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edit_patient"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:drawableTint="#6A6B6C"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <Button
            android:id="@+id/btn_search"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/white"
            android:text="검색"
            android:textColor="@color/main_color" />

        <ImageButton
            android:id="@+id/qr_scanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/icon_scanner"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:background="@color/second_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:padding="5dp"
            android:background="@color/white"
            android:id="@+id/term"
            android:paddingLeft="5dp"
            android:textSize="15dp"
            android:text=""
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ll_calender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_calendar_multiselect"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="@color/white" />
            <TextView
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:textSize="15dp"
                android:text="날짜선택"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
  <RadioGroup
      android:id="@+id/radio_group"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <RadioButton
          android:id="@+id/radio2"
          android:textSize="15dp"
          android:text="3 개월"
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"/>
    <RadioButton
        android:id="@+id/radio3"
        android:textSize="15dp"
        android:text="6 개월"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
      <RadioButton
          android:id="@+id/radio4"
          android:textSize="15dp"
          android:text="1년"
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"/>
      <TextView
          android:id="@+id/select_date"
          android:padding="5dp"
          android:background="@color/main_color"
          android:layout_marginRight="10dp"
          android:textColor="@color/white"
          android:text="직접선택"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

  </RadioGroup>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <LinearLayout
          android:gravity="center"
          android:background="@drawable/round_corner2"
          android:layout_width="100dp"
          android:layout_height="50dp"
          android:orientation="vertical">
          <TextView
              android:background="@color/second_color"
              android:gravity="center"
              android:text="3개월"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

      </LinearLayout>
  </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:background="@color/back_color"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:background="@color/white"
            android:gravity="center"
            android:text="시작"
            android:layout_width="150dp"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/tv_item1"
            android:src="@drawable/icon_calendar_multiselect"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:background="@color/white"
            android:gravity="center"
            android:text="끝"
            android:layout_width="150dp"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/tv_item2"
            android:src="@drawable/icon_calendar_multiselect"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_detail_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
    </FrameLayout>

</LinearLayout>